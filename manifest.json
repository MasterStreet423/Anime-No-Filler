{
    "manifest_version": 3,
    "name": "AnimeNoFiller - Crunchyroll",
    "version": "1.0",
    "description": "With AnimeNoFiller, you'll never have to wonder again whether an episode is canon or filler.",
    "icons": {
        "128": "Icons/logo3.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab", 
        "scripting", 
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module",
        "matches": ["*://*.crunchyroll.com/*", "*://*.animeflv.net/*"]
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["*://*.crunchyroll.com/*", "*://*.animeflv.net/*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["infoAnimes.json", "animeDataFunctions.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
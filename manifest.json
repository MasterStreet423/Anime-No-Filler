{
    "manifest_version": 3,
    "name": "One Piece - No relleno Crunchyroll",
    "version": "1.2",
    "description": "Extensión para verificar si un capítulo es de relleno en Crunchyroll",
    "icons": {
        "128": "Icons/logo3.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab", 
        "scripting", 
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
      },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["*://*.crunchyroll.com/*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["infoAnimes.json"],
            "matches": ["<all_urls>"]
        }
    ]
}
